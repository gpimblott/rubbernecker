<!-- Jumbotron Header -->
<div class="page-header">
    <h1>Roadmap</h1>
    <p>Shows Epics assigned to each milestone</p>
    </p>
</div>


<!-- Page Features -->
<div class="container">
    <div class="row">
        <div class="col-md-12">

            {{#each milestones}}
                <div class="col-md-4 kanban-column">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-12">

                                <div class="panel panel-info">
                                    <div class="panel-heading">

                                        <div class="panel-title text-center">
                                            <b><a href="/labels/{{encode this.title}}">{{this.title}}</a></b>
                                            &nbsp;
                                            <small>
                                                <a data-toggle="collapse" href="#collapse_ms_{{@index}}">[summary]</a>
                                            </small>
                                        </div>
                                    </div>
                                    <div id="collapse_ms_{{@index}}" class="panel-collapse collapse">
                                        <div class="panel-body">
                                            <table width="100%">
                                                <thead>
                                                <td></td>
                                                <td>Stories</td>
                                                <td>Points</td>
                                                </thead>
                                            {{{milestone_summary this}}}
                                            </table>
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-12">

                                {{#each this.data}}
                                    {{>milestonecard}}
                                {{/each}}
                            </div>

                        </div>

                    </div>
                </div>

            {{/each}}
        </div>
    </div>
</div>


