<div class="row">
    <div class="col-md-12 text-center">
        <h3>Kanban - {{title}}</h3>
    </div>
</div>
<!-- Page Features -->
<div class="row">
    <div class="col-md-12">
        <div class="col-md-4" style="border: #cdcdcd medium dashed">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-10 col-md-offset-1">
                        <h4 class="caption text-center">
                            <b>Not Started</b> <br>
                            <small>Stories:{{notStarted.length}}  Points:{{calculatePoints notStarted}}</small>
                        </h4>
                    </div>
                </div>

                {{#each notStarted}}
                    <div class="row">
                        <div class="panel panel-danger">
                            <div class="panel-heading">
                                <h3 class="panel-title">
                                    <a href="/story/{{this.project_id}}/{{this.id}}">{{this.name}} </a>&nbsp;
                                    <small>
                                        <a data-toggle="collapse" href="#collapse_{{this.id}}">[details]</a>
                                    </small>
                                </h3>
                            </div>
                            <div id="collapse_{{this.id}}" class="panel-collapse collapse">
                                <div class="panel-body">{{{nl2br this.description}}}</div>
                            </div>

                            <div class="panel-footer">
                                {{#each this.labels}}
                                    <a href="/labels/{{encode this.name}}">{{this.name}}</a>
                                    {{#unless @last}},{{/unless}}
                                {{/each}}
                                <p>{{this.estimate}} points ({{projectid2name this.project_id}})</p>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>

        <div class="col-md-4" style="border: #cdcdcd medium dashed">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-10 col-md-offset-1">
                        <h4 class="caption text-center">
                            <b>Started</b> <br>
                            <small>Stories:{{started.length}}  Points:{{calculatePoints started}}</small>
                        </h4>
                    </div>
                </div>

                {{#each started}}
                    <div class="row">
                        <div class="panel panel-warning">
                            <div class="panel-heading">
                                <h3 class="panel-title">
                                    <a href="/story/{{this.project_id}}/{{this.id}}">{{this.name}} </a>&nbsp;
                                    <small>
                                        <a data-toggle="collapse" href="#collapse_{{this.id}}">[details]</a>
                                    </small>
                                </h3>
                            </div>
                            <div id="collapse_{{this.id}}" class="panel-collapse collapse">
                                <div class="panel-body">{{{nl2br this.description}}}</div>
                            </div>

                            <div class="panel-footer">
                                {{#each this.labels}}
                                    <a href="/labels/{{encode this.name}}">{{this.name}}</a>
                                    {{#unless @last}},{{/unless}}
                                {{/each}}
                                <p>{{this.estimate}} points ({{projectid2name this.project_id}})</p>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>

        <div class="col-md-4" style="border: #cdcdcd medium dashed">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-10 col-md-offset-1">
                        <h4 class="caption text-center">
                            <b>Finished</b> <br>
                            <small>Stories:{{finished.length}}  Points:{{calculatePoints finished}}</small>
                        </h4>
                    </div>
                </div>

                {{#each finished}}
                    <div class="row">
                        <div class="panel panel-success">
                            <div class="panel-heading">
                                <h3 class="panel-title">
                                    <a href="/story/{{this.project_id}}/{{this.id}}">{{this.name}} </a>&nbsp;
                                    <small>
                                        <a data-toggle="collapse" href="#collapse_{{this.id}}">[details]</a>
                                    </small>
                                </h3>
                            </div>
                            <div id="collapse_{{this.id}}" class="panel-collapse collapse">
                                <div class="panel-body">{{{nl2br this.description}}}</div>
                            </div>

                            <div class="panel-footer">
                                {{#each this.labels}}
                                    <a href="/labels/{{encode this.name}}">{{this.name}}</a>
                                    {{#unless @last}},{{/unless}}
                                {{/each}}
                                <p>{{this.estimate}} points ({{projectid2name this.project_id}})</p>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>






