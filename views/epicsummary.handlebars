<div class="row">
    <div class="col-md-11 center-block">
        <table id="epicTable" class="table display">
            <thead>
            <tr>
                <th>Name</th>
                <th>Epic Label</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody>
            {{#each epics}}
                <tr>
                    <td><a href="{{this.url}}" target="_blank">{{this.name}} &nbsp;<span class="glyphicon glyphicon-share-alt" aria-hidden="true"></span></a></td>
                    <td><a href="/labels/{{this.label.name}}">{{this.label.name}}</td>
                    <td>{{{nl2br this.description}}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>





<script>
    $(document).ready(function() {
        $('#epicTable').DataTable();
    } );
</script>