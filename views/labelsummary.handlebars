<div>
    <div class="panel panel-default">
        <div class="panel-heading">Summary for label <b>'{{label}}'</b></div>
        <div class="panel-body">
            <p>Number of Stories : {{stories.length}}, Total points : {{totalPoints}},
            Not Estimated : {{notEstimated}}</p>
        </div>
        <table class="table">
            <tr>
                <th>Status</th>
                <th>Stories</th>
                <th>Points</th>
            </tr>
            {{#each stateMap}}
                <tr>
                    <td><a href="/stories/{{@key}}">{{@key}}</a></td>
                    <td>{{this.count}}</td>
                    <td>{{this.points}}</td>
                </tr>
            {{/each}}
        </table>
    </div>

</div>

<div class="row">
    <div class="col-md-12 center-block">
        <table id="labelTable" class="table display">
            <thead>
            <tr>
                <th>Name</th>
                <th>Estimate</th>
                <th>Status</th>
                <th>Labels</th>
            </tr>
            </thead>
            <tbody>
    {{#each stories}}
            <tr>
                <td><a href="{{this.url}}" target="_blank">{{this.name}}</a></td>
                <td>{{this.estimate}}</td>
                <td><a href="/stories/{{this.current_state}}">{{this.current_state}}</a></td>
                <td>
                {{#each this.labels}}
                    <a href="/labels/{{this.name}}">{{this.name}}</a>
                    {{#unless @last}},{{/unless}}
                {{/each}}
                </td>
            </tr>
    {{/each}}
            </tbody>
        </table>
    </div>

</div>


<script>
    $(document).ready(function() {
        $('#labelTable').DataTable();
    } );
</script>