<!-- Jumbotron Header -->
<div class="page-header">
    <h1>Roadmap</h1>
    <p>Shows Epics assigned to each milestone</p>
    </p>
</div>


<!-- Page Features -->
<div class="container">
    <div class="row">
        <div class="col-md-12">

            {{#each milestones}}
                <div class="col-md-4 kanban-column">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-12">

                                <div class="panel panel-info">
                                    <div class="panel-heading">

                                        <div class="panel-title text-center">
                                            <b><a href="/labels/{{encode this.title}}">{{this.title}}</a></b>
                                            &nbsp;
                                            <small>
                                                <a data-toggle="collapse" href="#collapse_ms_{{@index}}">[details]</a>
                                            </small>
                                        </div>
                                    </div>
                                    <div id="collapse_ms_{{@index}}" class="panel-collapse collapse">
                                        <div class="panel-body">
                                            {{#with this.summary}}
                                                <table width="100%">
                                                    <thead>
                                                    <td>Status</td>
                                                    <td>Stories</td>
                                                    <td>Points</td>
                                                    </thead>
                                                    <tr>
                                                        <td>Started</td>
                                                        <td> {{started}} </td>
                                                        <td> {{startedPoints}} </td>
                                                    </tr>
                                                    <tr>
                                                        <td>Not Started</td>
                                                        <td> {{unstarted}} </td>
                                                        <td> {{unstartedPoints}} </td>
                                                    </tr>
                                                    <tr>
                                                        <td>Finished</td>
                                                        <td>{{finished}} </td>
                                                        <td>{{finishedPoints}} </td>
                                                    </tr>
                                                    <tr>
                                                        <td>Unscheduled</td>
                                                        <td>{{unscheduled}} </td>
                                                        <td>{{unscheduledPoints}}</td>
                                                    </tr>
                                                    <tr bgcolor='#fff8dc'>
                                                        <td></td>
                                                        <td> {{numStories}}</td>
                                                        <td> {{totalPoints}} </td>
                                                    </tr>
                                                </table>
                                            {{/with}}
                                        </div>
                                    </div>
                                    <div class="panel-footer">
                                        {{#with this.summary}}
                                            <table width="100%">
                                                <tr>
                                                    <td>Stories</td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <small>Not Started:{{storiesNotStarted}}&nbsp;Started:{{started}}&nbsp;finished:{{finished}}</small>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <div class="progress">
                                                            <div class="progress-bar progress-bar-danger"
                                                                 role="progressbar"
                                                                 aria-valuenow="70"
                                                                 aria-valuemin="0" aria-valuemax="100"
                                                                 style="width:{{percentageNotStarted}}%">
                                                                {{percentageNotStarted}}% not started
                                                            </div>
                                                            <div class="progress-bar progress-bar-warning"
                                                                 role="progressbar"
                                                                 aria-valuenow="70"
                                                                 aria-valuemin="0" aria-valuemax="100"
                                                                 style="width:{{percentageStarted}}%">
                                                                {{percentageStarted}}% started
                                                            </div>
                                                            <div class="progress-bar progress-bar-success"
                                                                 role="progressbar"
                                                                 aria-valuenow="70"
                                                                 aria-valuemin="0" aria-valuemax="100"
                                                                 style="width:{{percentageFinished}}%">
                                                                {{percentageFinished}}% complete
                                                            </div>

                                                        </div>
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td>Points</td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <small>Not Started:{{pointsNotStarted}}&nbsp;Started:{{startedPoints}}&nbsp;finished:{{finishedPoints}}</small>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <div class="progress">
                                                            <div class="progress-bar progress-bar-danger"
                                                                 role="progressbar"
                                                                 aria-valuenow="70"
                                                                 aria-valuemin="0" aria-valuemax="100"
                                                                 style="width:{{percentagePointsNotStarted}}%">
                                                                {{percentagePointsNotStarted}}% not started
                                                            </div>
                                                            <div class="progress-bar progress-bar-warning"
                                                                 role="progressbar"
                                                                 aria-valuenow="70"
                                                                 aria-valuemin="0" aria-valuemax="100"
                                                                 style="width:{{percentagePointsStarted}}%">
                                                                {{percentagePointsStarted}}% started
                                                            </div>
                                                            <div class="progress-bar progress-bar-success"
                                                                 role="progressbar"
                                                                 aria-valuenow="70"
                                                                 aria-valuemin="0" aria-valuemax="100"
                                                                 style="width:{{percentagePointsFinished}}%">
                                                                {{percentagePointsFinished}}% complete
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>

                                            </table>
                                        {{/with}}
                                    </div>
                                </div>

                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-12">

                                {{#each this.data}}
                                    {{>milestonecard}}
                                {{/each}}
                            </div>

                        </div>

                    </div>
                </div>

            {{/each}}
        </div>
    </div>
</div>


